{
  "include": ["../src", "../test"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "..",
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["ES2023", "DOM"],
    "types": [],
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
