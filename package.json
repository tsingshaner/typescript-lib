{
  "name": "template",
  "version": "0.0.0",
  "description": "a lib template for typescript",
  "engines": {
    "node": ">=18.17.0"
  },
  "type": "module",
  "author": {
    "name": "qingshaner",
    "url": "https://github.com/Jon-a-than"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm tsup --config=config/tsup.config.ts",
    "changeset-version": "changeset version",
    "changeset-publish": "pnpm build && changeset publish",
    "format": "biome format . --write",
    "lint": "eslint . --ext .ts,.js --fix --ignore-path .gitignore",
    "prepare": "simple-git-hooks",
    "test": "vitest run -c config/vitest.config.ts",
    "test:cov": "vitest run --coverage -c config/vitest.config.ts",
    "test:dev": "vitest -c config/vitest.config.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "lint-staged": "^15.2.0",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": "eslint --cache --fix",
    "*.{js,jsx,cjs,mjs,ts,tsx,cts,mts}": "biome format --write"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "pre-push": "pnpm test"
  }
}
