{
  "name": "template",
  "version": "0.0.0",
  "description": "a lib template for typescript",
  "engines": {
    "node": ">=18.17.0"
  },
  "type": "module",
  "author": {
    "name": "qingshaner",
    "url": "https://github.com/Jon-a-than"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm tsup --config=config/tsup.config.ts",
    "changeset-version": "changeset version",
    "changeset-publish": "pnpm build && changeset publish",
    "format": "prettier --write src/ ./*.json ./*.cjs  --ignore-path .gitignore",
    "lint": "eslint . --ext .ts,.js --fix --ignore-path .gitignore",
    "prepare": "husky install",
    "test": "vitest run -c config/vitest.config.ts",
    "test:cov": "vitest run --coverage -c config/vitest.config.ts",
    "test:dev": "vitest -c config/vitest.config.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.55.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": "eslint --cache --fix",
    "*.json": "prettier --write"
  }
}
